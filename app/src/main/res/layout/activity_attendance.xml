<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title_rela"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/login_btn">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出勤"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/title_rela"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/time_lin">
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="统计："
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/from_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-01"
            android:textSize="16sp"
            android:layout_alignBottom="@id/time_text"
            android:layout_toRightOf="@id/time_text"
            />
        <TextView
            android:id="@+id/time1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⇿"
            android:textSize="20sp"
            android:layout_alignBottom="@id/time_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/from_time_text"
            />
        <TextView
            android:id="@+id/to_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-01"
            android:layout_alignBottom="@id/time_text"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/time1_text"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/time_lin"
        ></android.support.v7.widget.RecyclerView>
    <ProgressBar
        android:id="@+id/safety_progressbar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
