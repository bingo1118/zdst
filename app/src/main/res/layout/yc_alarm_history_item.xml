<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/category_group_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/alarm_rela_zx_bg">

        <TextView
            android:id="@+id/tv_time"
            android:layout_toRightOf="@id/group_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_margin="5dp"
            android:text="11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yg_zx_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/fire_img"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="火警"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@color/login_new_user"/>

            <TextView
                android:id="@+id/trouble_img"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="故障"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@color/action_now_color"/>

            <ImageView
                android:id="@+id/group_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/yg_zj_zx"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_toRightOf="@id/group_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:text="11"
                />
            <TextView
                android:id="@+id/tv_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="123"
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                android:layout_below="@+id/tv_name"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_alignStart="@+id/tv_name" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="#404040"
            android:gravity="center_vertical"
            android:text="地址:"/>



        <LinearLayout
            android:id="@+id/more_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">



            <TextView
                android:id="@+id/tv_fire_state"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:textColor="#404040"
                android:gravity="center_vertical"
                android:text="火警状态:"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_trouble_state"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:textColor="#404040"
                android:gravity="center_vertical"
                android:text="故障状态:"
                android:visibility="gone"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>